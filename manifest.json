{
    "name": "Trackpad Gestures",
    "version": "1.0.0",
    "author": "siti",
    "description": "An extension that allows you to browse the web productively with your laptop's trackpad and keyboard",

    "permissions": ["scripting", "storage", "sessions", "tabs"],
    "host_permissions": ["<all_urls>"],
    "background":{
        "service_worker": "service-worker.js"
    },
    "action":{
        "default_popup": "views/popup.html",
        "default_icon":{
            "16":"views/icons/research.png"
        }
    },
    "options_ui":{ 
        "page":"views/options.html",
        "open_in_tab": true
    },
    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "js": ["static/js/contentScript.js"]
        }
    ],
    "manifest_version": 3
}