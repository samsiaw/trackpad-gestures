{
    "name": "Trackpad Gestures",
    "version": "0.9",
    "author": "SamTS",
    "description": "An extension that allows you to browse the web productively with your laptop's trackpad and keyboard",
    "permissions": ["activeTab","storage", "sessions","alarms"],
    "background":{
        "scripts":["/static/background.js"],
        "persistent": false
    },
    "browser_action":{
        "default_popup": "views/popup.html",
        "default_icon":{
            "16":"icons/research.png"
        }
    },
    "options_page": "views/options.html",
    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "js": ["static/contentScript.js"]
        }
    ],
    "manifest_version": 2
}